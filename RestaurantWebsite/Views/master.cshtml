@using Umbraco.Cms.Web.Common.PublishedModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper umbracoHelper

@{
    Layout = null;
    var root = umbracoHelper.ContentAtRoot().FirstOrDefault();
    var siteName = root?.Value<string>("siteName") ?? "Mavi's Restaurant";
    var logo = root?.Value<IPublishedContent>("logo");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@siteName</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

    <!-- HEADER -->
    <header class="header">
        <div class="container">
            <div class="logo">
                @if (logo != null)
                {
                    <a href="/">
                        <img src="@logo.Url()" alt="@siteName" />
                    </a>
                }
                else
                {
                    <h1 class="logo">@siteName</h1>
                }
            </div>

            <nav class="nav">
                <a href="/">Home</a>
                <a href="/menu">Menu</a>
                <a href="/about-us">About</a>
            </nav>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="container">
            <p>© @DateTime.Now.Year @siteName</p>
        </div>
    </footer>

</body>
</html>

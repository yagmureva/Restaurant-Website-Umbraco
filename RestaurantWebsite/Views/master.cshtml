 @using Umbraco.Cms.Web.Common.PublishedModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper umbracoHelper

@{
    Layout = null;

    var root = umbracoHelper.ContentAtRoot().FirstOrDefault();
    var siteName = root?.Value<string>("siteName") ?? "Mavi's Restaurant";
    var logo = root?.Value<IPublishedContent>("logo");

    var companyName = root?.Value<string>("companyName") ?? siteName;
    var companyAddress = root?.Value<string>("companyAddress") ?? "";
    var companyPhone = root?.Value<string>("companyPhone") ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@siteName</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top custom-navbar">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    @if (logo != null)
                    {
                        <img src="@logo.Url()" alt="@siteName" class="site-logo" />
                    }
                    else
                    {
                        <span class="h4 mb-0">@siteName</span>
                    }
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @foreach (var child in Model.Root().Children())
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@child.Url()">@child.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="site-footer py-4 mt-6">
        <div class="container text-center">
            <p class="mb-0">© @DateTime.Now.Year @companyName | @companyAddress | @companyPhone</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

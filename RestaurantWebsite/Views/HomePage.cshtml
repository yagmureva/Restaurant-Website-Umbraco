@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "Master";

    var bgImage = Model.Value<IPublishedContent>("backgroundImage");
    var heroTitle = Model.Value<string>("heroTitle") ?? "Taste the Flavors of Malatya Cuisine";
    var heroDescription = Model.Value<string>("heroDescription") ?? "Savor traditional dishes crafted from local ingredients, bursting with Anatolian and Malatya flavors!";
}

<section class="hero" style="@(bgImage != null ? $"background-image: url('{bgImage.Url()}');" : "")">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1>@heroTitle</h1>
        <p>@heroDescription</p>
    </div>
</section>
